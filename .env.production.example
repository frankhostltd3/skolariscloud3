# =============================================================================
# PRODUCTION .env TEMPLATE FOR SMATCAMPUS
# =============================================================================
# Copy this file to .env on your VPS and update the values below.
# IMPORTANT: Update CENTRAL_DOMAIN to match your production domain!
# =============================================================================

APP_NAME=SMATCAMPUS
APP_ENV=production
APP_KEY=
APP_DEBUG=false

# =============================================================================
# DOMAIN CONFIGURATION (CRITICAL!)
# =============================================================================
# Set these to your actual production domain (without http/https)
# APP_URL should include https:// prefix
# CENTRAL_DOMAIN should NOT include http/https
APP_URL="https://smatcampus.com"
CENTRAL_DOMAIN=smatcampus.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Central database (landlord data: schools, billing, landlord users)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_central_database
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Tenant database credentials (same user should have access to all tenant DBs)
TENANT_DB_USERNAME=your_db_user
TENANT_DB_PASSWORD=your_db_password
TENANT_DB_CHARSET=utf8mb4
TENANT_DB_COLLATION=utf8mb4_unicode_ci

# =============================================================================
# CACHE, SESSION, QUEUE
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=your-mail-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@smatcampus.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOCALE
# =============================================================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =============================================================================
# OTHER SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
LOG_CHANNEL=stack
LOG_LEVEL=error
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log
